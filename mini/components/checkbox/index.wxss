
.checkbox {
    align-items: center;
    display: flex;
    overflow: hidden;
    -webkit-user-select: none;
    user-select: none
}

.checkbox--horizontal {
    margin-right: 12px
}

.checkbox__icon-wrap,
.checkbox__label {
    line-height: var(--checkbox-size, 20px)
}

.checkbox__icon-wrap {
    flex: none
}

.checkbox__icon {
    align-items: center;
    border: 1px solid var(--checkbox-border-color, #c8c9cc);
    box-sizing: border-box;
    color: transparent;
    display: flex;
    font-size: var(--checkbox-size, 20px);
    justify-content: center;
    text-align: center;
    transition-duration: var(--checkbox-transition-duration, .2s);
    transition-property: color, border-color, background-color;

    margin-right: 8rpx;
}

.checkbox__icon--round {
    border-radius: 100%
}

.checkbox__icon--checked {
    background-color: var(--checkbox-checked-icon-color, #07c160);
    border-color: var(--checkbox-checked-icon-color, #07c160);
    color: #fff
}

.checkbox__icon--disabled {
    background-color: var(--checkbox-disabled-background-color, #ebedf0);
    border-color: var(--checkbox-disabled-icon-color, #c8c9cc)
}

.checkbox__icon--disabled.checkbox__icon--checked {
    color: var(--checkbox-disabled-icon-color, #c8c9cc)
}

.checkbox__label {
    word-wrap: break-word;
    color: var(--checkbox-label-color, #323233);
    padding-left: var(--checkbox-label-margin, 10px)
}

.checkbox__label--left {
    float: left;
    margin: 0 var(--checkbox-label-margin, 10px) 0 0
}

.checkbox__label--disabled {
    color: var(--checkbox-disabled-label-color, #c8c9cc)
}

.checkbox__label:empty {
    margin: 0
}